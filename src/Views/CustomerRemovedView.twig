{% block customerRemoved %}
  <h1>Customer Removed</h1>

  {% if (numberOfCars == 0) %}
    <p>Customer {{customerName}} living at {{customerAddress}}, {{customerPostalAddres}}
      with personal number {{customerPersonalNumber}} and phone number {{customerPhoneNumber}} has been removed.</p>
  {% else %}
    <p><i>Customer {{customerName}} with number living at {{customerAddress}}, {{customerPostalAddres}}
        with personal number {{customerPersonalNumber}} and phone number {{customerPhoneNumber}}
       cannot be removed since they own {{numberOfCars}} cars.</i></p>
  {% endif %}
  
  <form method="post" action="/">
    <input type="submit" value="Ok">
  </form>
{% endblock %}